@model Vidly.Models.RandomMovieViewModels.RandomMovieViewModel
@{
    ViewData["Title"] = "Random";
    var className = Model.Customers.Count > 0 ? "popular" : null;
}

<h2 class="@className">@Model.Movie.Name</h2>

@if(Model.Customers.Count == 0)
{
    <p>No one has rented this movie.</p>

}
else
{
    <ul>
            @foreach (Customer cust in Model.Customers)
            {
                <li>@cust.Name</li>
            }
    </ul>
}
